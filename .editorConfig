root = true

[*]
indent_style = tab
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = true

[*.txt]
trim_trailing_whitespace = true
insert_final_newline = false

[*.yml]
indent_size = 4
indent_style = space

[*.yaml]
indent_size = 4
indent_style = space
